{
  "compilerOptions": {
    "types": ["vite", "vite/client", "@types/jest"],
    "module": "ESNext",
    "declaration": true,
    "noImplicitAny": false,
    "removeComments": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "jsx": "preserve",
    "noLib": false,
    "target": "es6",
    "sourceMap": true,
    "lib": ["ESNext", "DOM", "ES2020"],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "coast-ui-vue3": ["./lib/index.ts"],
      "@coast/*": ["./lib/*"]
    }
  },
  "exclude": ["node_modules"]
}
